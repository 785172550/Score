<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:background="#70000000"
	android:layout_height="match_parent">

	<ScrollView
		android:layout_marginTop="150dp"
		android:layout_centerHorizontal="true"
		android:id="@+id/msv"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<!--android:focusable="true"
			android:focusableInTouchMode="true" edittext 不自动获取焦点-->
		<LinearLayout
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:orientation="vertical"
			android:background="@color/white"
			android:layout_width="match_parent"
			android:layout_height="match_parent">


			<TextView
				android:text="填写患者信息"
				android:gravity="center"
				android:textSize="@dimen/textsize"
				android:layout_marginLeft="10dp"
				android:layout_width="match_parent"
				android:layout_height="50dp"/>
			<ImageView
				android:background="@color/slide_color"
				android:layout_width="match_parent"
				android:layout_height="1dp"/>

			<LinearLayout
				android:layout_marginTop="@dimen/marginTop_dimens"
				android:id="@+id/lin1"
				android:background="@color/white"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView
					android:text="姓        名:"
					style="@style/green_textview"
					android:layout_width="wrap_content"
					android:layout_height="@dimen/text_view_height"/>
				<EditText
					android:id="@+id/edt_1"
					android:layout_marginLeft="10dp"
					android:background="@null"
					android:hint=""
					android:layout_width="match_parent"
					android:layout_height="@dimen/text_view_height"/>
			</LinearLayout>

			<ImageView
				android:background="@color/slide_color"
				android:layout_width="match_parent"
				android:layout_height="1dp"/>
			<LinearLayout
				android:id="@+id/lin2"
				android:layout_marginTop="@dimen/marginTop_dimens"
				android:background="@color/white"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView
					android:text="住  院  号:"
					style="@style/green_textview"
					android:layout_width="wrap_content"
					android:layout_height="@dimen/text_view_height"/>
				<EditText
					android:id="@+id/edt_2"
					android:layout_marginLeft="10dp"
					android:background="@null"
					android:hint=""
					android:layout_width="match_parent"
					android:layout_height="@dimen/text_view_height"/>
			</LinearLayout>
			<ImageView
				android:background="@color/slide_color"
				android:layout_width="match_parent"
				android:layout_height="1dp"/>
			<LinearLayout
				android:id="@+id/lin3"
				android:layout_marginTop="@dimen/marginTop_dimens"
				android:background="@color/white"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView
					android:text="年        龄:"
					style="@style/green_textview"
					android:layout_width="wrap_content"
					android:layout_height="@dimen/text_view_height"/>
				<EditText
					android:inputType="numberDecimal"
					android:id="@+id/edt_3"
					android:layout_marginLeft="10dp"
					android:background="@null"
					android:hint=""
					android:layout_width="match_parent"
					android:layout_height="@dimen/text_view_height"/>
			</LinearLayout>
			<ImageView
				android:background="@color/slide_color"
				android:layout_width="match_parent"
				android:layout_height="1dp"/>
			<LinearLayout
				android:id="@+id/lin4"
				android:layout_marginTop="@dimen/marginTop_dimens"
				android:background="@color/white"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView
					android:text="性        别:"
					style="@style/green_textview"
					android:layout_width="wrap_content"
					android:layout_height="@dimen/text_view_height"/>
				<TextView
					android:id="@+id/edt_4"
					android:gravity="center_vertical"
					android:textSize="@dimen/textsize"
					android:layout_marginLeft="10dp"
					android:background="@null"
					android:layout_width="match_parent"
					android:layout_height="@dimen/text_view_height"/>
			</LinearLayout>
			<ImageView
				android:background="@color/slide_color"
				android:layout_width="match_parent"
				android:layout_height="1dp"/>
			<LinearLayout
				android:id="@+id/lin5"
				android:layout_marginTop="@dimen/marginTop_dimens"
				android:background="@color/white"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView
					android:text="造影日期:"
					style="@style/green_textview"
					android:layout_width="wrap_content"
					android:layout_height="@dimen/text_view_height"/>
				<TextView
					android:gravity="center_vertical"
					android:textSize="@dimen/textsize"
					android:id="@+id/edt_5"
					android:layout_marginLeft="10dp"
					android:background="@null"
					android:layout_width="match_parent"
					android:layout_height="@dimen/text_view_height"/>
			</LinearLayout>

		</LinearLayout>

	</ScrollView>
	<Button
		android:layout_below="@id/msv"
		android:layout_marginTop="50dp"
		android:id="@+id/next_btn"
		android:text="下一步"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_marginLeft="45dp"
		android:layout_marginRight="45dp"
		style="@style/next_btn_style"/>
</RelativeLayout>
